{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@/*": ["src/*"],
      "@img/*": ["src/images/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve",
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/"],
}
